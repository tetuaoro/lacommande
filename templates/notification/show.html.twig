{% extends 'base.html.twig' %}

{% block title %}Notification
{% endblock %}

{% block body %}
	<section class="notification-show p-t-110 p-b-90">
		<h1>Notification</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ notification.id }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ notification.title }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ notification.createdAt ? notification.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
				</tr>
				<tr>
					<th>Message</th>
					<td>{{ notification.message }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('notification_index') }}">back to list</a>

		<a href="{{ path('notification_edit', {'id': notification.id}) }}">edit</a>

		{{ include('notification/_delete_form.html.twig') }}
	</section>
{% endblock %}
