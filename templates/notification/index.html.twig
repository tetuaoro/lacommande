{% extends 'base.html.twig' %}

{% block title %}Notification index
{% endblock %}

{% block body %}
	<section class="notification p-t-110 p-b-90">

		<h1>Notification index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>CreatedAt</th>
					<th>Message</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for notification in notifications %}
					<tr>
						<td>{{ notification.id }}</td>
						<td>{{ notification.title }}</td>
						<td>{{ notification.createdAt|date('Y-m-d H:i:s T') }}</td>
						<td>{{ notification.message|raw }}</td>
						<td>
							<a href="{{ path('notification_show', {'id': notification.id}) }}">show</a>
							<a href="{{ path('notification_edit', {'id': notification.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('notification_new') }}">Create new</a>
	</section>
{% endblock %}
