{% extends 'base.html.twig' %}

{% block title "Accueil" %}

{% block bodyfull %}

	<div class="app">

		<section class="section-welcome bg1-pattern p-t-120 p-b-105">
			<div class="container">
				<div class="row">
					<div class="col-md-6 p-t-45 p-b-30">
						<div class="wrap-text-welcome t-center">
							<span class="tit2 t-center">
								Tahitian Food
							</span>

							<h3 class="tit3 t-center m-b-35 m-t-5">
								Iaorana
							</h3>

							<p class="t-center m-b-22 size3 m-l-r-auto">
								Donec quis lorem nulla. Nunc eu odio mi. Morbi nec lobortis est. Sed fringilla, nunc sed imperdiet lacinia, nisl ante egestas mi, ac facilisis ligula sem id neque.
							</p>

							<a href="#" class="txt4">
								{{ "Nous connaître" | trans }}
								<i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
							</a>
						</div>
					</div>

					<div class="col-md-6 p-b-30">
						<div class="wrap-pic-welcome size2 bo-rad-10 hov-img-zoom m-l-r-auto">
							<img src="http://lorempixel.com/640/480/food/2/" alt="IMG-OUR">
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="section-intro">
			<div class="header-intro parallax100 t-center p-t-135 p-b-158" style="background-image: url({{asset('assets/images/bg-intro-01.jpg')}});">
				<span class="tit2 p-l-15 p-r-15">
					{{ "Découvrir" | trans }}
				</span>

				<h3 class="tit4 t-center p-l-15 p-r-15 p-t-3">
					{{ nameSite }}
				</h3>
			</div>

			<div class="content-intro bg-white p-t-77 p-b-133">
				<div class="container">
					<div class="row">
						{% for meal in lastmeals %}
							<div class="col-md-4 p-t-30">
								<div class="blo1">
									<div class="wrap-pic-blo1 bo-rad-10 hov-img-zoom">
										<a href="{{ path('meal_show', {id: meal.id, slug: meal.slug}) }}"><img src="{{ meal.picture[0] }}" alt="IMG-INTRO"></a>
									</div>

									<div class="wrap-text-blo1 p-t-35">
										<a href="#">
											<h4 class="txt5 color0-hov trans-0-4 m-b-13">
												{{ meal.name }}
											</h4>
										</a>

										<div class="m-b-20">
											{{ meal.description | truncate(100) | raw }}
										</div>

										<a href="{{ path('meal_show', {id: meal.id, slug: meal.slug}) }}" class="txt4">
											{{ "Voir plus" | trans }}
											<i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
										</a>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{asset('assets/vendor/animsition/css/animsition.min.css') }}">
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{asset('assets/vendor/animsition/js/animsition.min.js')}}"></script>
	<script type="text/javascript" src="assets/vendor/parallax100/parallax100.js"></script>
	<script type="text/javascript">
		$('.parallax100').parallax100();
	</script>
{% endblock %}
