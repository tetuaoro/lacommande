{% set nameSite = "Arii Food" %}

{# lang #}
{% if app.request.attributes.get('_locale') %}
	{% set lang = app.request.attributes.get('_locale') %}
{% else %}
	{% set lang = app.request.defaultLocale %}
{% endif %}

{# path #}
{% set fullPathParams = app.request.attributes.get('_route_params') %}
{% if fullPathParams['id'] is defined %}
	{% set route_name = 'app_home' %}
{% else %}
	{% set route_name = app.request.attributes.get('_route') %}
{% endif %}
{% set fullPath = path(route_name, fullPathParams) %}

{# social #}
{% set global_twitt = "https://twitter.com/intent/tweet?hashtags=" ~ "arii,food,tahiti,Polynesie" | url_encode ~ "&original_referer=" ~ fullPath ~ "&ref_src=twsrc%5Etfw&related=twitterapi%2Ctwitter&text=" ~ 'I like ' ~ nameSite | url_encode ~ "&tw_p=tweetbutton&url=" ~ url('app_home') | url_encode ~ "&via=ariifood" %}
{% set global_fb = "https://www.facebook.com/dialog/share?app_id=" ~ get_env('OAUTH_FACEBOOK_ID') ~ "&display=popup&href=" ~ url('app_home') %}

{% if controller_name is defined and controller_name in ['user:new', 'app:credit'] %}
	{% set page_mode_header = 'mode-1' %}
{% endif %}

{% block index %}{% endblock %}
