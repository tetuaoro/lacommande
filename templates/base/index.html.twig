{% set nameSite = "Arii Food" %}

{# lang #}
{% if app.request.attributes.get('_locale') %}
	{% set lang = app.request.attributes.get('_locale') %}
{% else %}
	{% set lang = app.request.defaultLocale %}
{% endif %}

{# path #}
{% set fullPathParams = app.request.attributes.get('_route_params') %}
{% if fullPathParams['id'] is defined or app.request.attributes.get('_route') == 'homepage' %}
	{% set route_name = 'app_home' %}
{% else %}
	{% set route_name = app.request.attributes.get('_route') %}
{% endif %}
{% set fullPath = url(route_name, fullPathParams) %}

{# social #}
{% set  social_link_url = get_env('APP_ENV') == 'dev' ? 'https://bit.ly/2ZDJRpF' : 'https://bit.ly/2ZDJHyz' %}
{% set global_twitter = "https://twitter.com/intent/tweet?hashtags=Arii,Food,Tahiti,Polynesie" ~ "&url=" ~ social_link_url %}
{% set global_fb = "https://www.facebook.com/dialog/share?app_id=" ~ get_env('OAUTH_FACEBOOK_ID') ~ "&display=popup&href=" ~ social_link_url %}
{% set global_insta = "https://www.instagram.com/" %}
{# color #}
{% set color1 = "#dcdc0a" %}

{% block index %}{% endblock %}

