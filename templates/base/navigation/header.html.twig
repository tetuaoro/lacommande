{% if page_mode_header is not defined %}
	<header>
		<!-- Header desktop -->
		<div class="wrap-menu-header gradient1 trans-0-4">
			<div class="container h-full">
				<div class="wrap_header trans-0-3">
					<div class="logo">
						<a href="{{ path('app_index') }}">
							<img src="{{asset('assets/images/icons/logo3.png') }}" alt="IMG-LOGO" data-logofixed="{{asset('assets/images/icons/logo4.png')}}">
						</a>
					</div>

					<div class="wrap_menu p-l-45 p-l-0-xl">
						<nav class="menu">
							<ul class="main_menu">
								<li>
									<a href="{{ path('app_home') }}">{{ "Accueil" | trans({}, 'nav') }}</a>
								</li>

								<li>
									<a href="{{ path('meal_index') }}">{{ "Les plats" | trans({}, 'nav') }}</a>
								</li>

								<li>
									<a href="{{ path('contact_new') }}">Contact</a>
								</li>
							</ul>
						</nav>
					</div>

					<!-- Social -->
					<div class="social flex-w flex-l-m p-r-20">
						<div class="dropdown">
							<a class="nav-link text- dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
								{{ lang }}
							</a>
							<div class="dropdown-menu" style="min-width: 1rem;" aria-labelledby="dropdownMenuButton">
								{% for locale in ['fr', 'en'] %}
									{% if locale != lang %}
										<a class="dropdown-item text-dark" href="{{path('app_setlocale', {lang: locale, route: route_name})}}">{{locale}}</a>
									{% endif %}
								{% endfor %}
							</div>
						</div>
						<a href="#">
							<i class="fa fa-tripadvisor" aria-hidden="true"></i>
						</a>
						<a target="_blank" href="{{ global_fb }}">
							<i class="fa fa-facebook m-l-21" aria-hidden="true"></i>
						</a>
						<a class="twitter-share-button" target="_blank" href="{{ global_twitt }}">
							<i class="fa fa-twitter m-l-21" aria-hidden="true"></i>
						</a>
						{% if app.user %}
							<div class="d-none d-lg-block btn-group">
								<button type="button" class="dropdown-toggle dropdown-toggle-after" data-toggle="dropdown" data-display="static" aria-haspopup="false" aria-expanded="false">
									<span class="ti-user m-l-21 colorated"></span>
								</button>
								<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
									<a class="dropdown-item text-dark" href="{{path('user_show', {id: app.user.id})}}">
										<i class="far fa-eye mr-lg-1" aria-hidden="true"></i>
										{{"Profile"|trans({}, 'nav')}}
									</a>
									<a class="dropdown-item text-dark" href="{{path('user_manage', {id: app.user.id, token: random(11111111111111, 99999999999999)})}}">
										<i class="fas fa-cogs mr-lg-1" aria-hidden="true"></i>
										{{"Administrer"|trans({}, 'nav')}}
									</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item text-dark text-justify" href="{{path('meal_new')}}">
										<i class="fas fa-plus-circle mr-lg-1" aria-hidden="true"></i>
										{{"Ajouter"|trans({}, 'nav')}}
										<i class="fas fa-utensils ml-lg-1" aria-hidden="true"></i>
									</a>
									<a class="dropdown-item text-dark text-justify" href="{{path('meal_new')}}">
										<i class="fas fa-plus-circle mr-lg-1" aria-hidden="true"></i>
										{{"Ajouter"|trans({}, 'nav')}}
										<i class="fas fa-drumstick-bite ml-lg-1" aria-hidden="true"></i>
									</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item text-dark text-justify" href="{{path('app_logout')}}">
										<i class="fas fa-sign-out-alt mr-lg-1" aria-hidden="true"></i>
										{{"Logout"|trans({}, 'nav')}}
									</a>
								</div>
							</div>
						{% else %}
							<a class="d-none d-lg-block" href="{{ path('app_login') }}">
								<span class="ti-user m-l-21"></span>
							</a>
						{% endif %}
						<button class="d-lg-none btn-show-sidebar m-l-33 trans-0-4"></button>
					</div>

				</div>
			</div>
		</div>
	</header>

	<aside class="d-lg-none sidebar trans-0-4">
		<button class="btn-hide-sidebar ti-close color0-hov trans-0-4"></button>

		<ul class="menu-sidebar p-t-70 p-b-70">
			<li class="t-center m-b-30">
				{% if app.user %}
					<a class="border-bottom size1 flex-c-m trans-0-4 m-l-r-auto colorated" href="{{path('user_manage', {id: app.user.id, token: random(11111111111111, 99999999999999)})}}">
						<span class="ti-user"></span>
					</a>
				{% else %}
					<a href="{{ path('app_login') ~ '#connexion' }}" class="border-bottom size1 flex-c-m trans-0-4 m-l-r-auto">
						<span class="ti-user"></span>
					</a>
				{% endif %}
			</li>

			<li class="t-center m-b-13">
				<a href="{{ path('app_index') }}" class="txt19">{{ "Accueil" | trans({}, 'nav') }}</a>
			</li>
			<li class="t-center m-b-13">
				<a href="{{ path('meal_index') }}" class="txt19">{{ "Les plats" | trans({}, 'nav') }}</a>
			</li>
			<li class="t-center m-b-33">
				<a href="{{ path('contact_new') }}" class="txt19">Contact</a>
			</li>

			<li class="t-center">
				<a href="" class="btn3 flex-c-m size13 txt11 trans-0-4 m-l-r-auto">
					{{ "RÃ©servation" | trans({}, 'nav') }}
				</a>
			</li>
		</ul>
	</aside>

{% else %}
	<header>
		<a href="{{ path('app_index') }}">
			<img class="p-t-30 mx-auto d-block" src="{{asset('assets/images/icons/logo4.png') }}" alt="IMG-LOGO">
		</a>
	</header>
{% endif %}
