{% extends 'base.html.twig' %}

{% block title %}Provider{% endblock %}

{% block body %}
    <h1>Provider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ provider.code }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ provider.url }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ provider.createdAt ? provider.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Opentime</th>
                <td>{{ provider.opentime ? provider.opentime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Closetime</th>
                <td>{{ provider.closetime ? provider.closetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('provider_index') }}">back to list</a>

    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>

    {{ include('provider/_delete_form.html.twig') }}
{% endblock %}
