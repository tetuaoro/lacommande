{% set title_modal = "Supprimer le menu " ~ menu.id ~ ", " ~ meal.id %}
<form method="post" data-text-title-modal="{{title_modal}}" action="{{ path('menu_delete', {'id': menu.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menu.id) }}">
	<input type="hidden" name="meal" value="{{ meal.id }}">
	<button class="btn-bs py-0 btn-warning" title="{{title_modal}}">
		<i class="fas fa-trash" aria-hidden="true"></i>
	</button>
</form>
