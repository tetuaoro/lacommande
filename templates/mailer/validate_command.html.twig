{% extends "mailer/base.html.twig" %}

{% block body %}

	<spacer size="12"></spacer>

	<row>
		<columns small="2" large="3">
			<p>
				{{command.message}}
			</p>
			{% if bool == 1 %}
				<p>
					Date de livraison :
					<strong>
						{{command.commandAt|date("d M Y H:i")}}
					</strong>
				</p>
			{% endif %}
		</columns>
	</row>

	<spacer size="6"></spacer>

	<row>
		<columns>
			<center>
				<button class="provider-show" href="{{bool == 1 ? url('provider_show', {id:user.provider.id, slug:user.provider.slug}) ~ '#contact' : 'mailto:' ~ user.email ~ '?subject=' ~ command.reference}}">{{bool == 1 ? "Contacter" : "RÃ©pondre"}}</button>
			</center>
		</columns>
	</row>

{% endblock %}
