{% extends "user/auth/base.html.twig" %}

{% block title %}
	Manage
{% endblock %}

{% block user %}
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
					<a class="nav-link mb-3 active" id="v-pills-meal-tab" data-toggle="pill" href="#v-pills-meal" role="tab" aria-controls="v-pills-meal" aria-selected="true">
						{{"meal"|trans({}, 'user')}}
					</a>
					<a class="nav-link mb-3" id="v-pills-menu-tab" data-toggle="pill" href="#v-pills-menu" role="tab" aria-controls="v-pills-menu" aria-selected="false">
						{{"menu"|trans({}, 'user')}}
					</a>
					<a class="nav-link mb-3" id="v-pills-subuser-tab" data-toggle="pill" href="#v-pills-subuser" role="tab" aria-controls="v-pills-subuser" aria-selected="false">
						{{"subuser"|trans({}, 'user')}}
					</a>
					<a class="nav-link mb-3" id="v-pills-setting-tab" data-toggle="pill" href="#v-pills-setting" role="tab" aria-controls="v-pills-setting" aria-selected="false">
						{{"setting"|trans({}, 'user')}}
					</a>
				</div>
			</div>
			<div class="col-md">
				<div class="tab-content" id="v-pills-tabContent">
					<div class="tab-pane fade show active" id="v-pills-meal" role="tabpanel" aria-labelledby="v-pills-meal-tab">
						{% include "user/auth/manage/meal.html.twig" %}
					</div>
					<div class="tab-pane fade" id="v-pills-menu" role="tabpanel" aria-labelledby="v-pills-menu-tab">
						{% include "user/auth/manage/menu.html.twig" %}
					</div>
					<div class="tab-pane fade" id="v-pills-subuser" role="tabpanel" aria-labelledby="v-pills-subuser-tab">
						{% include "user/auth/manage/subuser.html.twig" %}
					</div>
					<div class="tab-pane fade" id="v-pills-setting" role="tabpanel" aria-labelledby="v-pills-setting-tab">
						{% include "user/auth/manage/setting.html.twig" %}
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{asset('assets/js/custom/loadingoverlay.min.js')}}"></script>
	<script src="{{asset('assets/js/custom/user/manage.js')}}"></script>
{% endblock %}
