<section class="manage-card">
	{% set meals = user.provider.meals %}
	{% for meal in meals %}
		<div class="card bg-warning bg-card-hover">
			<img width="200" src="{{meal.img}}" class="card-img" alt="IMG-MEAL">
			<div class="card-img-overlay d-flex flex-column">
				<h5 class="card-title">{{meal.name}}</h5>
				<div class="card-text">{{meal.description|truncate(40)|raw}}</div>
				<p class="card-text pt-3">{{meal.createdAt|date('d m Y')}}</p>
				<div class="mt-auto">
					<a class="btn-bs btn-warning" title="voir plus" href="{{path('user_meal_show', {id: meal.id, slug: meal.slug})}}">
						<i class="fas fa-eye" aria-hidden="true"></i>
					</a>
					<a class="btn-bs btn-warning" title="modifier" href="{{path('user_meal_u', {id: meal.id, slug: meal.slug})}}">
						<i class="fas fa-pencil-alt" aria-hidden="true"></i>
					</a>
					<form method="post" class="d-inline" action="{{ path('meal_delete', {'id': meal.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
						<button class="btn" title="supprimer">
							<i class="fas fa-trash" aria-hidden="true"></i>
						</button>
						<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meal.id) }}">
						<input type="hidden" name="_method" value="DELETE">
					</form>
				</div>
			</div>
		</div>
	{% else %}
		<div>
			<h3>Pas d'assiete: ajoutez-en un.</h3>
		</div>
	{% endfor %}
</section>
