<section class="manage-card">
	<button type="button" class="d-block" data-toggle="modal" data-target="#menuModal" data-whatever="@getbootstrap">
		<i class="fas fa-plus-circle" aria-hidden="true"></i>
	</button>
	{% set menus = user.provider.menus %}
	<div id="menu-show" class="menu-card">
		{% for menu in menus %}
			{% include "ajax/menu/new.html.twig" %}
		{% else %}
			<div>
				<h1 class="h5">Pas de menu : ajoutez-en un.</h1>
			</div>
		{% endfor %}
	</div>

	<div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="menuModalLabel">{{"Ajouter un menu"|trans({}, 'form')}}</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					{% include "ajax/menu/_form.html.twig" %}
				</div>
			</div>
		</div>
	</div>
</section>
