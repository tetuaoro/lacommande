{% extends 'base.html.twig' %}

{% block title %}
	{{"Commencer"|trans({}, 'connect')}}
{% endblock %}

{% block body %}

	<div class="user-new p-t-140 p-b-90">
		<div class="row">
			<div class="col-md"></div>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md"></div>
					<div class="col-md-9">
						<h3 class="text-center tit7">{{ "Pourquoi " ~ nameSite ~ " ?" }}</h3>
