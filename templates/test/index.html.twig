{% extends 'base.html.twig' %}

{% block title %}Hello TestController!
{% endblock %}

{% block body %}
	{% if app.debug %}
		<style>
			.example-wrapper {
				margin: 1em auto;
				max-width: 800px;
				width: 95%;
				font: 18px / 1.5 sans-serif;
				padding: 7em 2em 3em 2em;
			}
			.example-wrapper code {
				background: #F5F5F5;
				padding: 2px 6px;
			}
            .flash, .mailer {
                margin-top: 2em;
            }
		</style>

		<div class="example-wrapper">
			<h1>Hello
				{{ controller_name }}! âœ…</h1>

			This friendly message is coming from:
			<ul>
				<li>Your controller at
					<code>
						<a href="{{ '/home/lenoir/vscode/symfonyproject/lacommande/src/Controller/TestController.php'|file_link(0) }}">src/Controller/TestController.php</a>
					</code>
				</li>
				<li>Your template at
					<code>
						<a href="{{ '/home/lenoir/vscode/symfonyproject/lacommande/templates/test/index.html.twig'|file_link(0) }}">templates/test/index.html.twig</a>
					</code>
				</li>
			</ul>
			<section class="test mt-4">
				<div class="flash">
					<h5>Flash Test</h5>
					<a href="{{path("test_flash", {label: 'success'})}}">Success</a>
					<a href="{{path("test_flash", {label: 'danger'})}}">Danger</a>
				</div>

				<div class="mailer">
					<h5>Mailer Test</h5>
					{% if app.user %}
						<a href="{{path('test_mailer', {id: app.user.id})}}">Send mail</a>
					{% else %}
						<a href="{{path('app_login')}}">Login first</a>
						<a href="{{path('test_mailer', {id: 20})}}"> Or Send This</a>
					{% endif %}
				</div>
			</section>
