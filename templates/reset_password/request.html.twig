{% extends 'base.html.twig' %}

{% block title %}
	{{"Rénitialiser le mot de passe" | trans}}
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="request p-t-130 p-b-90">
		<div class="row">
			<div class="col-md"></div>
			<div class="col-md-6">
				<h1>{{"Rénitialiser le mot de passe" | trans}}</h1>

				<div class="my-5">
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email, {'translation_domain': 'connect'}) }}
					<small>
						{{"Entrer votre adresse mail et nous vous enverrons un lien de confirmation." | trans}}
					</small>
				</div>

				<button class="btn bs btn-primary">{{"Envoyer le lien" | trans}}</button>
				{{ form_end(requestForm) }}
			</div>
			<div class="col-md"></div>
		</div>
	</div>
{% endblock %}
