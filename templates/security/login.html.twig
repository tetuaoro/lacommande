{% extends 'base.html.twig' %}

{% block title %}
	{{ "Connexion" | trans({}, 'connect') }}
{% endblock %}

{% block body %}
	<div class="login p-t-130 p-b-90">
		<div class="row flex-column-reverse flex-md-row">
			<div class="col-md"></div>
			<div id="connexion" class="col-md mb-3">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							{{ "Vous êtes déjà connecté(e) " | trans({}, 'connect') ~ app.user.username }},
							<a href="{{ path('app_logout') }}">{{ "Déconnexion" | trans({}, 'connect') }}</a>
						</div>
					{% endif %}

					<div class="card">
						<div class="card-body">

							<h3 class="mb-3 tit7">{{ "Connexion" | trans({}, 'connect') }}</h3>
							<label for="inputUsername">{{ "Identifiant" | trans({}, 'connect') }}</label>
							<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
							<label for="inputPassword">{{ "Mot de passe" | trans({}, 'connect') }}</label>
							<input type="password" name="password" id="inputPassword" class="form-control" required>

							<div class="checkbox my-3 custom-control custom-switch">
								<input type="checkbox" class="custom-control-input" id="customSwitch1" name="_remember_me">
								<label class="custom-control-label" for="customSwitch1">
									{{ "Se souvenir de moi" | trans({}, 'connect') }}
								</label>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<button class="btn btn-lg d-block" type="submit">
								{{ "Se connecter" | trans({}, 'connect') }}
							</button>
							<a class="fs-14" href="{{ path('app_forgot_password_request') }}">{{"Mot de passe oublié"|trans({}, 'connect')}}</a>
							<a class="fs-14" href="{{ path('user_register') }}">{{"Créer un compte"|trans({}, 'connect')}}</a>
						</div>
					</div>
				</form>
				<p class="text-justify mt-1 mx-5">Pour des raisons de sécurité, veuillez vous déconnecter et fermer votre navigateur lorsque vous avez fini d'accéder aux services.</p>
			</div>
			<div class="col-md"></div>
		</div>
	</div>
{% endblock %}

