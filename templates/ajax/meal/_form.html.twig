{{ form_start(form_meal) }}
{{ form_errors(form_meal.recaptcha) }}
<fieldset id="field-meal" data-load-spinner="field-meal">
	{{ form_row(form_meal.name) }}
	{{ form_row(form_meal.price) }}
	{{ form_row(form_meal.image) }}
	{{ form_widget(form_meal.recaptcha) }}
	<button type="button" class="btn d-block btn-form-collapse" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">
		{{"Plus d'option"|trans({}, 'form')}}
		<i class="fas fa-plus-circle ml-1" aria-hidden="true"></i>
	</button>
	<div class="collapse multi-collapse" id="multiCollapseExample2">
		{{ form_row(form_meal.description) }}
		{{ form_row(form_meal.recipe) }}
		{{ form_row(form_meal.tags) }}
	</div>
	<hr style="width: 222px;">
	<div id="data-meal" data-meal="{{ {display: 'nonone',info: meal is defined ? meal.imgInfo : '', img: meal is defined ? meal.img : '', lang: app.request.defaultLocale}|json_encode|e('html_attr') }}"></div>
	{# <span class="config text-info" style="display: none;">
		config server :
		{% for item in config %}
			{{item ~ " "}}
		{% endfor %}
	</span> #}
