<form method="post" action="{{ path('subuser_delete', {'id': subuser.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subuser.id) }}">
    <button class="btn">Delete</button>
</form>
