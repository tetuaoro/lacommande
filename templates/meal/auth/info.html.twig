{% if meal_view %}
	<div class="card">
		<div class="card-body">
			<ul class="list-group list-group-flush">
				<li class="list-group-item active">Information</li>
				<li class="list-group-item tcommand">T. Commande :
					<span class="tcommand-count">
						{{meal.totalcommand|number_format}}
					</span>
				</li>
				<li class="list-group-item">
					<span>Stock : {{meal.stock}}</span>
				</li>
				<li class="list-group-item">
					<span>Vue : {{meal.viewer}}</span>
				</li>
				<li class="list-group-item">Lien :
					<span id="myInput" title="cliquer pour copier">{{meal.bitly.link}}</span>
					<input value="{{meal.bitly.link}}" id="mySelect" type="text" class="d-none"/>
				</li>
				<li class="list-group-item">
					<img src="{{ qr_code_url(meal.bitly.link, {size:150}) }}"/>
				</li>
				<li class="list-group-item">Depuis :
					{{meal.createdAt|date('d/m/y')}}
				</li>
			</ul>
		</div>
	</div>
{% endif %}
