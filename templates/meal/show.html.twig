{% extends 'base.html.twig' %}

{% block title %}Meal
{% endblock %}

{% block body %}

	<div class="meal-show p-t-115 p-b-123">
		<h1>Meal</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ meal.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ meal.name }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ meal.createdAt ? meal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Recipe</th>
					<td>{{ meal.recipe | raw }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ meal.description | raw }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ meal.price }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('meal_index') }}">back to list</a>

		<a href="{{ path('meal_edit', {'id': meal.id}) }}">edit</a>

		{{ include('meal/_delete_form.html.twig') }}
	</div>
    
{% endblock %}
