{{ form_start(form) }}
<fieldset>
	{{ form_row(form.name) }}
	{{ form_row(form.price) }}
	{{ form_row(form.stock) }}
	{{ form_row(form.image) }}
	<button type="button" class="btn d-block mb-3 btn-form-collapse" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">
		{{"Plus d'option"|trans({}, 'form')}}
		<i class="fas fa-plus-circle ml-1" aria-hidden="true"></i>
	</button>
	<div class="collapse multi-collapse multiCollapseMeal" id="multiCollapseMeal">
		{{ form_row(form.preOrder, {'attr':{'class': 'mb-0'}}) }}
		{{ form_row(form.preOrderAt.date, {'attr': {'min':'now'|date('Y-m-d')}}) }}
		<div class="d-none">
			{{ form_row(form.preOrderAt.time) }}
		</div>
		{{ form_row(form.description) }}
		{{ form_row(form.tags) }}
	</div>
	<hr style="width: 222px;">
	<button class="btn">{{ button_label | default('Enregistrer') }}</button>
</fieldset>
{{ form_end(form) }}
